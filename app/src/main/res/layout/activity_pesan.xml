<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    tools:context=".PesanActivity">

    <com.example.bajuonline.widget.hotsale
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:background="@drawable/hoodie"
            android:cropToPadding="true">

        </ImageButton>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoodie pria murah kualitas ori"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

            <TextView
                android:id="@+id/tv_150000"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Rp 150.000"
                android:textSize="15dp"
                android:layout_marginTop="20dp">

            </TextView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Jumlah :"
                   android:textSize="18dp">
               </TextView>
               <EditText
                   android:id="@+id/et_jumlah"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:inputType="textPersonName"
                   android:hint="Jumlah"
                   android:layout_marginStart="10dp"/>
           </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_pesan"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="14dp"
                    android:text="Pesan"
                    android:inputType="textCapWords"
                    android:layout_marginTop="50dp">
                </Button>
                <Button
                    android:id="@+id/bt_keluar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Keluar"
                    android:inputType="textCapWords"
                    android:textSize="14dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="90dp">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </com.example.bajuonline.widget.hotsale>

</androidx.appcompat.widget.LinearLayoutCompat>